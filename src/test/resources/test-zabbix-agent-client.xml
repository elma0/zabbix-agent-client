<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd

    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd"
       default-lazy-init="true">
    <context:annotation-config/>
    <bean id="bootstrap"
          class="zabbixagent.client.BootstrapFactory"/>
    <bean id="client"
          class="zabbixagent.client.ZabbixAgentClient">
    </bean>

    <bean id="zbxHandler" scope="prototype"
          class="zabbixagent.client.response.ZabbixHeaderDecoder"/>
    <bean id="msgToEventHandler"
          class="zabbixagent.client.response.MessageToEventPipe"/>

    <bean class="zabbixagent.client.SpringMapProvider"/>

    <bean id="serializer" class="com.fasterxml.jackson.databind.ObjectMapper"/>
    <bean id="jsonFile" factory-bean="classPathResource" factory-method="getFile">
    </bean>
    <bean id="classPathResource" class="org.springframework.core.io.ClassPathResource">
        <constructor-arg value="Metrics.json"/>
    </bean>
    <bean id="channelFactory"
          class="zabbixagent.client.ChannelFactoryImpl"/>
    <bean id="handlers" class="zabbixagent.client.response.ZbxChannelInitializer">
    </bean>
    <bean class="tests.EchoServer" scope="prototype">
        <constructor-arg>
            <ref bean="echoServerHandler"/>
        </constructor-arg>
    </bean>
    <bean id="echoServerHandler" class="tests.EchoServerHandler"/>
    <bean class="tests.RequestChecker"/>
</beans>
